<?xml version= "1.0" encoding= "UTF-8" ?>
<ScrollView xmlns:android= "http://schemas.android.com/apk/res/android"
    android:layout_width= "match_parent" android:layout_height= "match_parent" >
    <LinearLayout android:layout_width= "match_parent"
        android:layout_height= "match_parent" android:gravity= "center"
        android:orientation= "vertical" >
        <TextView android:layout_width= "match_parent"
            android:layout_height= "wrap_content" android:text= "1a. Load Image by URL" />
        <ImageView android:id= "@+id/imageView"
            android:layout_width= "wrap_content" android:layout_height= "wrap_content" />
        <TextView android:layout_width= "match_parent"
            android:layout_height= "wrap_content" android:text= "1b. Load Image by resourceID" />
        <ImageView android:id= "@+id/imageView2"
            android:layout_width= "wrap_content" android:layout_height= "wrap_content" />
        <TextView android:layout_width= "match_parent"
            android:layout_height= "wrap_content" android:text= "2. Resize image" />
        <ImageView android:id= "@+id/imageView5"
            android:layout_width= "wrap_content" android:layout_height= "wrap_content" />
        <TextView android:layout_width= "match_parent"
            android:layout_height= "wrap_content" android:text= "3. Error-handling" />
        <ImageView android:id= "@+id/imageView6"
            android:layout_width= "wrap_content" android:layout_height= "wrap_content" />
        <TextView android:layout_width= "match_parent"
            android:layout_height= "wrap_content" android:text= "4. Load gif by URL" />
        <ImageView android:id= "@+id/imageView7"
            android:layout_width= "wrap_content" android:layout_height= "wrap_content" />
        <TextView android:layout_width= "match_parent"
            android:layout_height= "wrap_content" android:text= "5. Image Crop" />
        <ImageView android:id= "@+id/imageView8"
            android:layout_width= "match_parent" android:layout_height= "100dp" />
        <TextView android:layout_width= "match_parent"
            android:layout_height= "wrap_content" android:text= "6. Transformation" />
        <ImageView android:id= "@+id/imageView9"
            android:layout_width= "wrap_content" android:layout_height= "wrap_content" />
    </LinearLayout>
</ScrollView>